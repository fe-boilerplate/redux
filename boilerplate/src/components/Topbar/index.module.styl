@import "~common/global.styl"
.wrap
  width 100%
  background #3B3C3E
  font-size 12px
  line-height 40px
  height 40px
  min-width $main-width

.inner
  margin 0 auto
  width $main-width
  white-space nowrap
  a
    color #A2A2A2
    text-decoration none
    margin-right 15px
    &:hover
      color #bbb

.left
  float left

.right
  float right

.sep
  &:after
    color #666
    margin-left 15px
    content "|"

.badge
  background #F04D44
  font-size 12px
  font-family Tahoma
  color #fff
  border-radius 3px
  padding 0 5px
  letter-spacing 1px
  display inline-block
  line-height 16px
  height 18px
  transform scale(0.75)

.arrow
  position relative
  top -10px
  left 5px
  margin-right 15px
  &:after
  &:before
    top 100%
    left 50%
    border solid transparent
    content " "
    height 0
    width 0
    position absolute
    pointer-events none
  &:before
    border-top-color currentColor
    border-width 4px
    margin-left -4px
  &:after
    border-top-color #3B3C3E
    border-width 3px
    margin-left -3px
